// jsconfig.json
{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "$lib": ["src/lib"],
            "$lib/*": ["src/lib/*"],
            "$elements/*": ["src/lib/elements/*"],
            "$utils/*": ["src/lib/utils/*"],
            "$componens/*": ["src/lib/componens/*"],
            "$api/*": ["src/lib/api/*"],
            "$styles/*": ["src/styles/*"],
            "$lang/*": ["src/lib/lang/*"],
            "$routes/*": ["src/routes/*"]
        }
    }
}